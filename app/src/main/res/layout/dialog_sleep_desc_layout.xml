<?xml version="1.0" encoding="utf-8"?>
<com.hjq.shape.layout.ShapeConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:shape_radius="@dimen/dp_10"
    app:shape_solidColor="@color/white"
    android:padding="@dimen/dp_5"
    android:layout_gravity="center"
    android:layout_margin="@dimen/dp_5"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/sleepTmpTv1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Time ratio"
        android:textColor="#ff000000"
        android:textSize="13sp"
        android:padding="5dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"/>

    <LinearLayout
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/sleepTmpTv1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">




        <com.github.mikephil.charting.charts.PieChart

            android:id="@+id/sleepDialogChart"
            android:layout_margin="@dimen/dp_15"
            android:layout_width="@dimen/dp_200"
            android:layout_height="@dimen/dp_200" />


        <com.bonlala.fitalent.view.CusSleepDescView
            android:id="@+id/sleepDialogScheduleView"
            android:layout_width="@dimen/dp_300"
            android:gravity="center"
            android:layout_margin="@dimen/dp_10"
            android:layout_gravity="center"
            android:layout_height="@dimen/dp_150"/>
    </LinearLayout>


<com.hjq.shape.view.ShapeTextView
    android:id="@+id/dialogSleepOkTv"
    app:shape_solidColor="#4EDD7D"
    android:textColor="@color/white"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:textSize="16sp"
    android:text="OK"
    android:paddingStart="@dimen/dp_20"
    android:paddingEnd="@dimen/dp_20"
    android:paddingTop="5dp"
    android:layout_marginTop="@dimen/dp_15"
    android:layout_marginBottom="@dimen/dp_15"
    android:paddingBottom="@dimen/dp_5"
    app:shape_radius="@dimen/dp_15"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintLeft_toLeftOf="parent"
    app:layout_constraintRight_toRightOf="parent"/>

</com.hjq.shape.layout.ShapeConstraintLayout>