<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="@color/common_bg_color"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="match_parent">

    <com.hjq.bar.TitleBar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:title="@string/string_sport_detail"
        app:leftIcon="@drawable/ic_black_back"
        app:rightIcon="@mipmap/ic_share_img"/>


    <androidx.core.widget.NestedScrollView
        android:id="@+id/exerciseShareView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <include layout="@layout/item_sport_record_item_layout"/>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="HR histogram"
                android:textColor="#ff2f2f33"
                android:textSize="22sp"
                android:layout_margin="@dimen/dp_10"/>


            <com.hjq.shape.layout.ShapeLinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:shape_solidColor="@color/white"
                android:orientation="vertical"
                android:layout_margin="@dimen/dp_5"
                app:shape_radius="@dimen/dp_10">


            <com.bonlala.fitalent.chartview.LineRecChartPractiseView
                android:id="@+id/exerciseChartView"
                android:layout_width="match_parent"
                android:layout_marginStart="@dimen/dp_5"
                android:layout_marginEnd="@dimen/dp_5"
                android:paddingBottom="@dimen/dp_10"
                android:layout_height="@dimen/dp_150"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/exerciseMaxTv"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:text="--"
                        android:textColor="#ffff0000"
                        android:textSize="22sp"
                        android:gravity="center"
                       android:layout_gravity="center" />


                    <TextView
                        android:id="@+id/exerciseMinTv"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:text="--"
                        android:textColor="#ff73d13d"
                        android:textSize="22sp"
                        android:gravity="center"
                        android:layout_gravity="center" />

                    <TextView
                        android:id="@+id/exerciseAvgTv"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:text="-"
                        android:textColor="#ffb8b8b8"
                        android:textSize="22sp"
                        android:gravity="center"
                        android:layout_gravity="center" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/dp_5"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:text="Max"
                        android:textColor="#ff6e6e77"
                        android:textSize="12sp"
                        android:gravity="center"
                        android:layout_gravity="center"/>

                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:text="Min"
                        android:textColor="#ff6e6e77"
                        android:textSize="12sp"
                        android:gravity="center"
                        android:layout_gravity="center"/>

                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:text="Avg"
                        android:textColor="#ff6e6e77"
                        android:textSize="12sp"
                        android:gravity="center"
                        android:layout_gravity="center"/>
                </LinearLayout>

            </com.hjq.shape.layout.ShapeLinearLayout>


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="HR data analysis diagram"
                android:textColor="#ff2f2f33"
                android:textSize="22sp"
                android:layout_margin="@dimen/dp_10"/>


            <com.hjq.shape.layout.ShapeLinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:shape_radius="@dimen/dp_15"
                app:shape_solidColor="@color/white"
                android:layout_margin="@dimen/dp_5"
                android:orientation="vertical">


                <com.github.mikephil.charting.charts.PieChart
                    android:id="@+id/exercisePieChart"
                    android:layout_gravity="center"
                    android:layout_width="@dimen/dp_200"
                    android:layout_height="@dimen/dp_200"
                    android:layout_margin="@dimen/dp_10" />

                <com.bonlala.fitalent.view.ExerciseHrBarView
                    android:id="@+id/exerciseTimeChart"
                    android:layout_width="match_parent"
                    android:layout_marginBottom="@dimen/dp_15"
                    android:layout_height="wrap_content"/>

            </com.hjq.shape.layout.ShapeLinearLayout>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="HR data analysis diagram"
                android:textColor="#ff2f2f33"
                android:textSize="22sp"
                android:layout_marginTop="@dimen/dp_10"
                android:layout_marginStart="@dimen/dp_10"/>

            <com.hjq.shape.layout.ShapeLinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:shape_solidColor="@color/white"
                android:padding="@dimen/dp_15"
                app:shape_radius="@dimen/dp_15"
                android:layout_margin="@dimen/dp_5"
                android:orientation="vertical">


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="    Resting heart rate: The number of heartbeats per minute for a normal person is generally 60 to 100 beats per minute in a resting state.
Exercise heart rate: During exercise, you can judge the state of your body's exercise according to the heart rate interval, and select the appropriate heart rate interval to achieve the best exercise effect."
                    android:textColor="#ff2f2f33"
                    android:textSize="14sp"
                    android:lineSpacingExtra="5dp"/>


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="* The data and suggestions provided are for reference only and cannot be used as a basis for clinical diagnosis and treatment"
                    android:textColor="#ff2f2f33"
                    android:layout_marginTop="@dimen/dp_20"
                    android:textSize="14sp"
                    android:lineSpacingExtra="@dimen/dp_5"/>
            </com.hjq.shape.layout.ShapeLinearLayout>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

</LinearLayout>